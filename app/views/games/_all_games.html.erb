<% if @games.size > 0 %>
  <div class="container">

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Game</th>
          <th>Winner</th>
          <th>Finish Time</th>
        </tr>
      </thead>

      <tbody>
        <% @games.each do |game| %>
          <tr>
            <td> 
                <%= link_to game.team_one + ' vs ' + game.team_two, game_path(game) %>
            </td>
            <% if game.winner == "1" %>
              <td> <%= game.team_one %></td>
            <% elsif game.winner == "2" %>
              <td> <%= game.team_two %></td>
            <% else %>
              <td> Unfinished </td>
            <% end %>
            <td><%= game.date %>  <%= game.finish_time %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <% else %>
    <%= render 'no_games' %>
  <% end %>

        
