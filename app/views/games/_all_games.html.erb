<% if @games.size > 0 %>

    <table>
      <thead> 
        <tr>
          <th>Team one</th>
          <th>Team two</th>
          <th>Winner</th>
          <th>Date</th>
          <th>Time</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      
      <tbody>
        <% @games.each do |game| %>
          <tr>
            <td><%= game.team_one %></td>
            <td><%= game.team_two %></td>
            <td><%= game.winner %></td>
            <td><%= game.date %></td>
            <td><%= game.finish_time %></td>
            
            <td><%= link_to 'Show', game %></td>
            <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <tr>
            <td><%= link_to "bet on "+game.team_one, {:controller => "bets", :action => "new", :game => game.id, :team => "team_one"}%></td>
            <td><%= link_to "bet on "+game.team_two, {:controller => "bets", :action => "new", :game => game.id, :team => "team_two" }%></td>
            <td><%= link_to 'Join Bet', edit_game_path(game) %></td>
            
          </tr>
        <% end %>
      </tbody>
    </table>
<% else %>
  <h3>Sorry No Games</h3>
<% end %>