
<% if @finished_game.size > 0 %>
    <table>
      <thead>
        <tr>
          <th>Team one</th>
          <th>Team two</th>
          <th>Winner</th>
          <th>Date</th>
          <th>Time</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      
      <tbody>

        <% @finished_game.each do |game| %>

          <% if @time < game.finish_time %>
              <tr>
                <td><%= game.team_one %></td>
                <td><%= game.team_two %></td>
                <td>
                  <% if game.winner == "1" %>
                    <%= game.team_one %>
                  <% elsif game.winner == "2" %>
                    <%= game.team_two %>
                  <% end %>
                </td>
                <!-- <td><%= game.winner %></td> -->
                <% test = game.date >= Date.today %>
                <td><%= test %></td>
                <td> <%= game.date %> </td>
                <td> <%= @date %> </td>
                <td><%= game.finish_time %></td>
              </tr>
              
              <td><%= link_to 'Show', game %></td>
              <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>

          <% end %>

         

        <% end %>
      </tbody>
    </table>
<% else %>
  <%= render 'no_games' %>
<% end %>