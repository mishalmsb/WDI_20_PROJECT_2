<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <label class="allLabels" ondblclick="hideLabels('allLabels','divName')"> <%= f.label :name %> </label><br>
  <label class="allLabels" ondblclick="hideLabels('allLabels','divName')"> <%= current_user.name %> </label>

    <div class="field divs" id="divName" style="display: none">
      <%= f.text_field :name%>
    </div>
  
  <br><br>

  <label class="allLabels">Top Up Your Account</label><br>
  <div class="field allLabels">
      You have: <%= current_user.money %> tokens
  </div>
  
  <label class="allLabels"> <%= current_user.nationality %> </label>
  <div class="field divs" style="display: none">
      <%= f.label :nationality %><br>
      <%= f.text_field :nationality %>
  </div>

  <label class="allLabels"> <%= current_user.name %> </label>
  <div class="field divs" style="display: none">
    <%= f.label :notes %><br>
    <%= f.text_field :notes %>
  </div>

  <div class="field divs" style="display: none">
    <%= f.label :graffiti_image %><br>
    <%= f.file_field :graffiti_image %>
  </div>
  
  <label class="allLabels"> Double Click to change Image </label>
  <div class="field divs" style="display: none">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>


  <div class="field divs" style="display: none">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field divs" style="display: none">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field" id="divPassword" style="display: none">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions" id="actions" style="display: none">
    <%= f.submit "Update" %>
  </div>
<% end %>
  
  <div class="allLabels">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
  </div>

<script type="text/javascript">

  // document.addEventListener("dblclick", function(event){
  // });

  function hideLabels(allLabels,elementId) {
      var elements = document.getElementsByClassName(allLabels)

      for (var i = 0; i < elements.length; i++){
          elements[i].style.display = "none";
      
      }
      console.log(elementId)
      document.getElementById(elementId).style.display = "block";
      document.getElementById("actions").style.display = "block";
      document.getElementById("divPassword").style.display = "block";
      
  };
    

  function reset(allDivs) { 
      var elements = document.getElementsByClassName(allDivs)

      for (var i = 0; i < elements.length; i++){
          elements[i].style.display = "none";
      
      }
      document.getElementById("actions").style.display = "none";
  }
  // document.addEventListener("click", function(){
  //     document.getElementById("demo").innerHTML = "Hello World";
  // });

</script>

<div class="allLabels">
  <%= image_tag @user.graffiti_image.url %>
</div>
  
<%= render 'edit_show_user' %>

<%= link_to "Back", :back %>
