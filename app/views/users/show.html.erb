<div class="container" id="profile">
  <p id="notice"><%= notice %></p>

    <div class="row">
        <div class="col-sm-6 col-md-6">
            <img src="<%= @user.graffiti_image.url %>"
            alt="" class="img-rounded img-responsive" />
        </div>
        <div class="col-sm-4 col-md-4">
            <blockquote>
                <p><h3> <%= @user.name.capitalize %> </h3></p> <small><cite title="Source Title"><%= @user.nationality.capitalize %> <i class="glyphicon glyphicon-map-marker"></i></cite></small>
            </blockquote>
                <p> 
                  <i class="glyphicon glyphicon-envelope"></i> <%= current_user.email %>
                </p>
                    
                <p> <%= @user.notes %> </p>
                <p> <%= @user.money %> tokens left </p>
                
                <p> <%= link_to 'Back', users_path %> </p>
        </div>
        
      </div>
      <div style="display: <%= is_admin ? "block" : "none"; %> ">
        <p> <%= link_to 'Edit', edit_user_path(@user) %> </p>
      </div>
      
</div>

 

