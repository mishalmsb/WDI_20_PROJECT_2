<div class="container">
  <p id="notice"><%= notice %></p>


  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Money:</strong>
    <%= @user.money %>
  </p>

  <p>
    <strong>Nationality:</strong>
    <%= @user.nationality %>
  </p>

  <p>
    <strong>Notes:</strong>
    <%= @user.notes %>
  </p>

  <p>
    <strong>Picture:</strong>
    <%= image_tag @user.graffiti_image.url %>
  </p>

  <div id="my_games">


    <h3>Bets</h3>
      <table>
        <thead>
          <tr>
            <th>User</th>
            <th>User two</th>
            <th>Value</th>
            <th>Status</th>
            <th>Game</th>
            <th>Winner</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @bets.where(:user_id => @user.id).each do |bet| %>
          <tr>
            <% if bet.user_id != nil %>
              <td><%= bet.user.email %> </td>
            <% end %>
            <% if bet.user_two_id != nil %>
              <td><%= bet.user_two.email %>  </td>
            <% end %>
            <td><%= bet.value %></td>
            <td><%= bet.status %></td>
            <td><%= bet.game_id %> <%= bet.game.team_one %> VS <%= bet.game.team_two %></td>

            <% if bet.status == "start" %>
                <% if bet.user_id == current_user.id || bet.user_two_id == current_user.id %>
                  <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
            <% end %>

            <td><%= bet.game.winner %></td>
            
          </tr>
          
        <% end %>

        <% @bets.where(:user_two_id => @user.id).each do |bet| %>
          <tr>
            <% if bet.user_id != nil %>
              <td><%= bet.user.email %> </td>
            <% end %>
            <% if bet.user_two_id != nil %>
              <td><%= bet.user_two.email %>  </td>
            <% end %>
            <td><%= bet.value %></td>
            <td><%= bet.status %></td>
            <td><%= bet.game_id %> <%= bet.game.team_one %> VS <%= bet.game.team_two %></td>

            <% if bet.status == "start" %>
                <% if bet.user_id == current_user.id || bet.user_two_id == current_user.id %>
                  <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
            <% end %>

            <td><%= bet.game.winner %></td>
            
          </tr>
          
        <% end %>

      </tbody>
      </table>

  </div>


  <br>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>

</div>

